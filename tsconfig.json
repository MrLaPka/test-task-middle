{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
